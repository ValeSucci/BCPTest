
@{
    ViewBag.Title = "Transferir";
}

<h2>Transferir</h2>
@if (ViewBag.Alert != null)
{
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">
            &times;
        </button>
        <strong>Aviso!</strong> @ViewBag.Alert
    </div>
}
<div class="container">
    <form method="POST">
        <div class="row">
            <h3>Cuenta Origen</h3>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lnro">Cuenta</label>
            </div>
            <div class="col-75">
                <select id="nroCuentaO" name="nroCuentaO" onchange="updateSaldo();">
                    @foreach (var co in Model)
                    {
                        string aux = @co.nroCuenta + "-" + @co.saldo;

                        <option value="@aux">@co.nroCuenta</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lsaldo">Saldo Disponible</label>
            </div>
            <div class="col-75">
                <input type="text" id="saldo" name="saldo" readonly value="">
            </div>
        </div>
        <br>
        <div class="row">
            <h3>Cuenta Destino</h3>
        </div>

        <div class="row">
            <div class="col-25">
                <label for="lnro">Cuenta</label>
            </div>
            <div class="col-75">
                <select id="nroCuentaD" name="nroCuentaD">
                    @foreach (var cd in Model)
                    {
                        <option value="@cd.nroCuenta">@cd.nroCuenta</option>
                    }
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-25">
                <label for="lmonto">Monto</label>
            </div>
            <div class="col-75">
                <input type="text" id="monto" name="monto">
            </div>
        </div>
        <br>
        <div class="row">
            <input name="submit" type="submit" id="aceptar" value="Aceptar">
        </div>
    </form>
</div>




<script>
    var origen = document.getElementById('nroCuentaO').value;
    var saldo = origen.split("-")[1];
    document.getElementById('saldo').value = saldo;

    function updateSaldo() {
        var origen = document.getElementById('nroCuentaO').value;
        var saldo = origen.split("-")[1];
        document.getElementById('saldo').value = saldo;
    }

</script>