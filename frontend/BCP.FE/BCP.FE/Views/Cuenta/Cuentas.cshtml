
@{
    ViewBag.Title = "Cuentas";
}

<h2>Cuentas</h2>
<div>
    <table id="cuenta">
        <tr>
            <th>Tipo</th>
            <th>Moneda</th>
            <th>Cuenta</th>
            <th>Titular</th>
            <th>Saldo</th>
            <th>Link</th>
        </tr>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.tipo</td>
                <td>@c.moneda</td>
                <td>@c.nroCuenta</td>
                <td>@c.nombre</td>
                <td>@c.saldo</td>
                <td>
                    <button>@Html.ActionLink("Movimientos", "Movimientos", "Cuenta", new
                       {                                                     // routeValues
                           id = @c.nroCuenta
                       },null)</button>
                </td>
            </tr>
        }
    </table>
</div>


